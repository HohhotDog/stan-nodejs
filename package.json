{
  "name": "stan-starter-pack",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "babel src/server --extensions .ts --out-dir dist/server",
    "build:client": "babel src/client --extensions .ts --out-dir dist/client && node scripts/copy-client-assets.js",

    "dev:server": "npm run build:server && node dist/server/cli.js --interval=15 --file=./data.json",
    "dev:client": "node scripts/serve-client.js src/client 8080",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",

    "typecheck": "tsc --noEmit",
    "start": "echo \"Open two terminals: 'npm run server' and 'npm run client'\"",
    "test": "jest",
    "server": "node dist/server/cli.js --interval=15 --file=./data.json",
    "client": "node scripts/serve-client.js dist/client 8080"
  },
  "bin": {
    "stan": "./dist/server/cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.0",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "typescript": "^5.6.3"
  }
}
